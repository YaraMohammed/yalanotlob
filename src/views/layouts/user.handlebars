<!DOCTYPE html>
<html>
	<head>
		<!-- Meta & Tag Words -->
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Yala Notlob - {{user.name}}</title>
		<!-- Style-CSS -->
		<link rel="stylesheet" href="/assets/css/style.css" type="text/css" media="all" />
		<link rel="stylesheet" href="/assets/css/font-awesome.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
		<script src="/assets/js/app.js" charset="utf-8"></script>
	</head>
	<body>
		{{> user/nav}}
		<div class="center-container">

							<!-- Nav Bar -->
							<nav class="navbar navbar-inverse">
							  <div class="container-fluid">
							    <div class="navbar-header">
							      <a class="navbar-brand" href="/">YALA NOTLOB</a>
							    </div>

									<!-- Left Side -->
							    <ul class="nav navbar-nav">
							      <li><a href="/">Home</a></li>
							      <li><a href="/friends">Friends</a></li>
							      <li><a href="/groups">Groups</a></li>
										<li><a href="/orders">Orders</a></li>
							    </ul>
									<!-- // Left Side -->

									<!-- Right Side -->
							    <ul class="nav navbar-nav navbar-right">
										<li>
											<div id='notificate' class="dropdown">
											  <button style="margin-top: 11px" class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
											    <span class="glyphicon glyphicon-bullhorn"></span> <span id="badge" class="badge"> 0 </span>
											  </button>
											  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1" style="width: 450px">
													<li style="padding: 3px 20px;">Notifications</li>
													<li role="separator" class="divider"></li>
													{{#each notifications}}
													{{#ifEq type "req"}}
													<li id='{{orderID}}'>
														{{#ifEq myStatus "waiting"}}
														{{#ifEq status "waiting"}}
														<a href="/order/{{orderID}}/accept">{{userName}} has invited you to his/her order. Click to Join</a>
														{{else}}
														<a href="/order/{{orderID}}">{{userName}} has invited you to his/her order. Finished</a>
														{{/ifEq}}
														{{else}}
														<a href="/order/{{orderID}}">{{userName}} has invited you to his/her order. Joined</a>
														{{/ifEq}}
													</li>
													{{else}}
													<li>
														<a href="/user/{{user}}">{{userName}}</a> has accepted invitation to <a href="/order/{{orderID}}">your order</a>.
													</li>
													{{/ifEq}}
													<li role="separator" class="divider"></li>
													{{/each}}
													<li><a href="/notifications">View All Notifications</a></li>
												</ul>
											</div>
										</li>
										<li><a href="/profile"><img src="/uploads/{{user.imageUrl}}" class="profile-image img-circle responsive" style="width: 25px; height: 25px;">{{user.name}}</a></li>
							      <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
							    </ul>
									<!-- // Right Side -->

							  </div>
							</nav>
							<!-- // Nav Bar -->
		    <BR><BR>
			{{{body}}}
		    <!-- Footer -->
		    <div class="footer">
		        <p>&copy; 2017 ITI INTAKE 37. All rights reserved | Design by <a href="https://www.facebook.com/groups/190513138041329/" target="_blank">Open Srouce Department</a></p>
		    </div>
		    <!--// Footer-->

		</div>
		<!-- // Center Container -->

		<!-- JS -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
		<!-- // JS -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="/assets/js/jquery-3.2.1.min.js"></script>
		<script type="text/javascript" src="/assets/js/clientConfig.js" ></script>
		<script type="text/javascript" src="/assets/js/socketHandler.js" ></script>
	</body>
</html>
